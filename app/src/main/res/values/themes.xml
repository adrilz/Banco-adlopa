<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Bancoadlopa" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">#0F315A</item>
    </style>

    <style name="Theme.Bancoadlopa" parent="Base.Theme.Bancoadlopa" />
    
    <style name="EstiloBotones" parent="Base.Theme.Bancoadlopa" >
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#0A7378</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="EstiloBotonesLand" parent="Base.Theme.Bancoadlopa" >
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#0A7378</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_size</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="EstiloTexto" parent="Base.Theme.Bancoadlopa" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>